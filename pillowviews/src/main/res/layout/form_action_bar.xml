<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="fill_horizontal"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar_cancel_button"
        android:src="@drawable/ic_clear_white_24dp"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />


    <TextView
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/actionbar_cancel_button"
        android:layout_centerVertical="true"
        tools:text="Crear ramat"
        android:id="@+id/action_bar_custom_title"
        android:layout_gravity="center_vertical"
        />

    <Button
        style="@style/ActionBarButton"
        android:id="@+id/actionbar_save_button"
        android:text="@string/save"
        android:drawableRight="@drawable/ic_done_white_36dp"
        android:textAppearance="?android:attr/textAppearanceSmall"


        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>