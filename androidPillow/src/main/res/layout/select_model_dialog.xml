<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mateuyabar.android.pillow.MainActivity" >

<!-- http://stackoverflow.com/questions/1555109/stop-edittext-from-gaining-focus-at-activity-startup -->    
    <!-- LinearLayout
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="0px" android:layout_height="0px"/-->
    
    <EditText
        android:id="@+id/search_edit_text"
        android:nextFocusUp="@id/search_edit_text" android:nextFocusLeft="@id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:drawableLeft="@drawable/ic_search_grey600_18dp"
        android:maxLines="1">

        
    </EditText>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        </ListView>

</LinearLayout>
